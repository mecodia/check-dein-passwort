@import 'nib'

$background-color = #6AA3A4

inputfocus,
selectfocus,
textareafocus,
buttonfocus
    outline none

a, a:hover, a:focus
    color #ffe1a5

footer a, footer a:hover, footer a:focus
    color white

#time-sentence a, #time-sentence a:hover, #time-sentence a:focus
    color white
    text-decoration none

html
    height 100%

body
    padding-top 5%
    background-color $background-color
    transition background-color 0.5s ease
    color white
    font-family 'Droid Sans', sans-serif

.page-static h1,
.page-static h2,
.page-static h3
    color #ffe1a5

.center
    text-align center

.title
    opacity 0.8
    font-size 6em
    line-height 80px
    margin-bottom 40px
    font-family 'Amatic SC', cursive
    font-weight normal

.alert, #password
    border 1px solid rgba(17, 17, 17, 0.8)
    border-radius 8px
    box-shadow inset 0 1px 3px rgba(0, 0, 0, 0.35), 0 1px 0 rgba(255, 255, 255, 0.25)

.alert
    margin 20px 10px

.popover-content
    color #555

#password
    background-color #e6eef6
    font-weight bold
    font-size 25px
    line-height 30px
    text-align center
    height 50px
    margin-bottom 10px

#result
    display none

#result #time-sentence
    font-size 21px
    font-weight 200
    line-height 30px

#result #time
    font-size 31.5px
    font-weight bold

#checks
    margin-bottom 60px
    display none

footer
    position fixed
    bottom 0
    background #303841
    border-top 1px solid #111
    width 100%

footer .btn
    padding 3px 6px

footer .btn:hover,
footer .btn:focus
    color $background-color

#time-sentence sup img
    vertical-align baseline

/* Some special fixes for small devices (iPhone & Co) */
@media only screen and (min-device-width : 320px) and (max-device-width : 480px)
    footer
        position relative /* unstick the footer*/
        border-bottom 1px solid #111
        margin-top 5px

    .title
        font-size 3em
        line-height 1.2em
        margin-bottom 25px

.alert h2
    margin-top 0
    font-family 'Amatic SC', cursive
    font-weight bold

footer p
    padding 10px 10px 0 10px

.back
    padding-bottom 20px

.arrow
    color: #ffe1a5
